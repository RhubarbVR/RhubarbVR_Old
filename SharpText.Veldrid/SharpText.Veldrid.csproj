    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SharpText.Core" Version="0.2.0" />
    <PackageReference Include="Veldrid.SPIRV" Version="1.0.14" />
